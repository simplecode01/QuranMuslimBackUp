<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_surah_layout"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="72dp">



            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_meccan"
                    android:id="@+id/imageMeccan"/>

                <ImageView
                    android:id="@+id/imageMedian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_medinan" />



            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_surah_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/material_on_surface_emphasis_high_type"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="Qs.Al-Fatihah"/>

                    <TextView
                        android:textColor="@color/material_on_surface_emphasis_high_type"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/text_number_of_ayah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="( 0  Ayat )"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="13sp"
                        android:id="@+id/text_surah_latin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/material_on_surface_emphasis_medium"
                        android:text="Pembukaan "/>
                    <TextView
                        android:textSize="13sp"
                        android:id="@+id/text_surah_asal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/material_on_surface_emphasis_medium"
                        android:text="Mekkah or Madinah"/>


                </LinearLayout>



            </LinearLayout>
            <TextView
                android:id="@+id/text_surah_name_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="6dp"
                android:text="name Arabic"
                android:fontFamily="@font/hafs"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_bismillah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ِبِسْــــــــــــــــــمِ اللهِ الرَّحْمَنِ الرَّحِيْمِ"
            android:textStyle="bold"
            android:fontFamily="@font/hafs"
            android:textColor="@color/material_on_surface_emphasis_high_type"
            android:textSize="10pt"/>
    </LinearLayout>



    <TextView
        android:id="@+id/text_juz_or_page_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary50"
        android:textColor="?colorPrimary"
        android:padding="4dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:gravity="center"
        android:text="• Juz 1 • Hal 1 •"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_ayah_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:text="286"/>

        <ImageView
            android:id="@+id/image_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:padding="6dp"
            android:src="@drawable/ic_baseline_more_horiz"
            app:tint="?colorPrimary" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_ayah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hafs"
        android:text="يَكَادُ ٱلْبَرْقُ يَخْطَفُ أَبْصَـٰرَهُمْ ۖ كُلَّمَآ أَضَآءَ لَهُم مَّشَوْا۟ فِيهِ وَإِذَآ أَظْلَمَ عَلَيْهِمْ قَامُوا۟ ۚ وَلَوْ شَآءَ ٱللَّهُ لَذَهَبَ بِسَمْعِهِمْ وَأَبْصَـٰرِهِمْ ۚ إِنَّ ٱللَّهَ عَلَىٰ كُلِّ شَىْءٍ قَدِيرٌ"
        android:paddingTop="8dp"
        android:paddingHorizontal="16dp"
        android:textSize="28sp"
        android:textColor="@color/material_on_surface_emphasis_high_type"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

    <TextView
        android:id="@+id/text_latin_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:textColor="@color/material_on_surface_emphasis_medium"
        android:text="Latin read in here"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

    <TextView
        android:id="@+id/text_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:textColor="@color/material_on_surface_emphasis_medium"
        android:text="Translate in here"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

</LinearLayout>